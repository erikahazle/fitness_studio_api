{
  "name": "fitness_studio_api",
  "version": "1.0.0",
  "description": "API for a fitness studio app",
  "main": "src/index.js",
  "author": "Erika Jonikaite",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon --exec babel-node src/index.js",
    "test": "./node_modules/.bin/jest . --watch --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    }
  },
  "dependencies": {
    "apollo-server-express": "^1.0.4",
    "body-parser": "^1.17.2",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "graphql": "^0.10.5",
    "graphql-tools": "^1.1.0",
    "mongoose": "^4.11.5"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "faker": "^4.1.0",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "nodemon": "^1.11.0"
  }
}
